@using System.Data
@{
    ViewBag.Title = "Empresas";
    Layout = "~/Views/Administrador/Pagina_Maestra.cshtml";
}

<!-- Wide card with share menu button -->
<style>
    .demo-card-wide.mdl-card {
        width: 312px;
    }

    .demo-card-wide > .mdl-card__title {
        color: #fff;
        height: 146px;
        background-image: url("~/Recursos_Administrador/images/centro.jpg");
        background-image:url('~/Recursos_Administrador/images/consulta-nutricional.png')
    }

    .demo-card-wide > .mdl-card__menu {
        color: #fff;
    }
</style>
@foreach (DataRow row in Model.Rows)
{
    <tr id="@row["Id"]">
        <div class="demo-card-wide mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text"></h2>
            </div>
            <div class="mdl-card__supporting-text">
                <br>Dueño :  @row["Nombre"]
                <br>Direccion : @row["Direccion"]
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                    Ver informacion
                </a>
            </div>
            <div class="mdl-card__menu">
                <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                    <i class="material-icons">share</i>
                </button>
            </div>
        </div>
        </tr>
        }
